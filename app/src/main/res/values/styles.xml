<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_app_main_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>
    <!-- 平分布局使用 -->
    <style name="ll_equally_w">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 登录引导页 -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>
    <!-- 引导页 -->
    <style name="style_guide_btn">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">300px</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- ic_menu_center -->
    <style name="tv_user_center" parent="tv_defalult">
        <item name="android:textColor">#002b41</item>
        <item name="android:textSize">61px</item>
    </style>
    <!-- 下载 -->
    <style name="download_btn">
        <item name="android:layout_marginRight">10px</item>
        <item name="android:layout_width">160px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:textSize">@dimen/defalult_text_size</item>
        <item name="android:textColor">@color/default_app_main_color</item>
        <item name="android:background">@drawable/btn_down_normal</item>
    </style>
</resources>
